<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:weightSum="6"
        android:orientation="horizontal"
        android:background="#ffffff">

    <ImageView
        android:id="@+id/imgRestaurantImage"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:padding="5dp"
        android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_weight="3.3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtRestaurantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of Restaurant"
                android:padding="8dp"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/txtRestaurantCostForOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtRestaurantName"
                android:text="\u20B9  280/person"
                android:padding="8dp"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtFavBorderIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_heart_border_new"/>


            <TextView
                android:id="@+id/txtRestaurantRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtFavBorderIcon"
                android:text="4.5"
                android:layout_alignParentEnd="true"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textColor="#ffca28"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>