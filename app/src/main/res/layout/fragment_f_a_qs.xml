<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FAQsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtQ1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q1. What does Foodify do ?"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/txtA1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtQ1"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:text="Foodify provides an online service for ordering food from your favourite restaurant available."/>

        <TextView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/txtA1"
            android:background="#c4c4c4"/>

        <TextView
            android:id="@+id/txtQ2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:text="Q2. What is the assurance of food delivered ?"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/txtA2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtQ2"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:text="Foodify only lists out the restaurant which assures the good quality of food."/>

        <TextView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/txtA2"
            android:background="#c4c4c4"/>

        <TextView
            android:id="@+id/txtQ3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q3. What safety measures are taken during pandemic ?"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_margin="15dp"
            android:layout_below="@id/line2"/>
        <TextView
            android:id="@+id/txtA3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtQ3"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:text="Foodify provides a zero contact delivery of food. Our delivery merchant's temperature is measured daily and will deliver you the sanitized package of food. "/>

        <TextView
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/txtA3"
            android:background="#c4c4c4"/>

        <TextView
            android:id="@+id/txtQ4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q4. What is the average time of delivery ?"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/line3"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/txtA4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtQ4"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:text="Average time of delivery is 30 minutes. Time can be affected due to traffic."/>

        <TextView
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/txtA4"
            android:background="#c4c4c4"/>

    </RelativeLayout>


</ScrollView>