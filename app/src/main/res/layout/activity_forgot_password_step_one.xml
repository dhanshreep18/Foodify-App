<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgotPasswordStepOneActivity"
    android:background="@color/colorPrimary">
    
    <ImageView
        android:id="@+id/imgFoodifyLogo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/foodify_logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp" />
    
    <TextView
        android:id="@+id/txtNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgFoodifyLogo"
        android:text="Enter your registered mobile number and email below :"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp" />
    
    <EditText
        android:id="@+id/etMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNormal"
        android:background="#ffffff"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:inputType="phone"
        android:hint="Mobile Number (10 digits)"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etMobileNumber"
        android:background="#ffffff"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:hint="Email Address"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmail"
        android:background="@color/buttonColor"
        android:layout_margin="15dp"
        android:text="Next"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>
</RelativeLayout>